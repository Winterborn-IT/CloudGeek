<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="529.0" prefWidth="1012.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cloudgb.cloud.CloudController">
    <MenuBar prefHeight="25.0" prefWidth="960.0">
        <menus>
            <Menu mnemonicParsing="false" text="File">
                <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                </items>
            </Menu>
        </menus>
        <VBox.margin>
            <Insets bottom="5.0" />
        </VBox.margin>
    </MenuBar>
    <HBox alignment="TOP_CENTER" spacing="10.0">
        <Button mnemonicParsing="false" onAction="#btnPathUpClient" prefHeight="25.0" prefWidth="52.0" text="Up" />
        <TextField fx:id="clientPathField" editable="false" HBox.hgrow="ALWAYS" />
        <Button mnemonicParsing="false" onAction="#btnPathUpServer" prefHeight="25.0" prefWidth="52.0" text="Up" />
        <TextField fx:id="serverPathField" editable="false" HBox.hgrow="ALWAYS" />
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" />
        </padding>
    </HBox>
    <HBox spacing="10.0" VBox.vgrow="ALWAYS">
        <TableView fx:id="clientFiles" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
        <TableView fx:id="serverFiles" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
      <padding>
         <Insets left="5.0" right="5.0" />
      </padding>
    </HBox>
    <HBox alignment="CENTER" fillHeight="false" prefHeight="0.0" prefWidth="1085.0" spacing="10.0">
        <Button mnemonicParsing="false" onAction="#upload" prefWidth="210.0" text=" Upload file to cloud " HBox.hgrow="ALWAYS">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="170.0" text="Rename file" HBox.hgrow="ALWAYS">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="170.0" text="Delete file" HBox.hgrow="ALWAYS">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#download" prefHeight="30.0" prefWidth="210.0" text="Download file from cloud" HBox.hgrow="ALWAYS">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="170.0" text="Rename file" HBox.hgrow="ALWAYS">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="170.0" text="Delete file" HBox.hgrow="ALWAYS">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </HBox>
</VBox>
